 <fieldset>
   <legend><%='Contact us' %></legend>
   
   <%= form_for @contact_us,url: contact_us_path , html: {class: 'form-horizontal', role: 'form', multipart: true} do |form| %>       
     <div class='form-group'>
       <div class='col-sm-10'>
         <%= form.text_field :topic, placeholder: 'Topic', class: 'form-control' %>
       </div>
     </div>

     <div class='form-group'>
       <div class='col-sm-10'>
         <%= form.text_field :email, placeholder: 'Email', class: 'form-control' %>
       </div>
     </div>         
     
     <div class="form-group">
       <div class="col-sm-offset-2 col-sm-10">
         <%= form.submit "Submit" , class: 'btn btn-default' %>
       </div>
     </div>
             
  <% end %>
</fieldset>